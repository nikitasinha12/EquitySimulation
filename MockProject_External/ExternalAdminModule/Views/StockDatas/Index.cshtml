@model IEnumerable<ExternalAdminModule.StockData>

@{
    ViewBag.Title = "Index";
}

<html>
<head>
    <title>External Exchange System</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="http://10.207.60.190/ExternalAdminModule/Home/AfterLogin"><span class="glyphicon glyphicon-retweet"></span> Exchange PlatForm</a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="http://10.207.60.190/ExternalAdminModule/Home/">Log Out</a></li>
            </ul>
        </div>
    </nav>


    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MarketPrice)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityAvailable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MarketPrice)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Symbol}) |
                    @Html.ActionLink("Details", "Details", new { id = item.Symbol }) 
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.Symbol })*@
                </td>
            </tr>
        }

    </table>

    <footer class="navbar navbar-fixed-bottom">

        <div class="row" style="align-self:baseline">
            <div class="col-sm-12">
                <div class="panel panel-default my_panel">
                    <p style="text-align:center">COPYRIGHT 2017</p>
                </div>
            </div>
        </div>

    </footer>

</body>
</html>